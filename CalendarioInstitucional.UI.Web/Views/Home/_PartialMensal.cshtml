@model CalendarioViewMOD

@if (!Model.DiasDoMes.Any())
{
    @await Html.PartialAsync("_PartialVazio")
    return;
}

<div class="calendar-grid">
    @foreach (var dia in Model.DiasDoMes)
    {
        <div class="day @(dia.Data.Date == DateTime.Today ? "day-highlight" : "")"
             onclick="goToDay('@dia.Data.ToString("yyyy-MM-dd")')">
            <div class="day-header">
                <span class="day-number @(dia.Data.Date == DateTime.Today ? "text-green" : "")">@dia.Data.Day</span>
                <span class="day-label d-none d-lg-inline">@dia.Data.ToString("ddd")</span>
                <span class="day-label d-lg-none d-inline">@dia.Data.ToString("dddd")</span>
            </div>
            <div class="events">
                @foreach (var evento in dia.Eventos)
                {
                    @await Html.PartialAsync("_PartialEvento", evento)
                }
            </div>
        </div>
    }
</div>
