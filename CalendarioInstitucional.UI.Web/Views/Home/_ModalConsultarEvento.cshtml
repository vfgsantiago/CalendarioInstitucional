@model EventoMOD

<div class="modal fade" id="modalConsultar_@Model.CdEvento" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content border-0 rounded-4 bg-light shadow-lg">
            <div class="modal-header border-0 pb-0">
                <div class="w-100 d-flex align-items-start justify-content-between">
                    <div class="px-4 py-3">
                        <span class="badge rounded-pill @Model.TxCor px-3 py-2 mb-2 d-inline-flex align-items-center h5">
                            <i class="@Model.TxIcone me-2"></i>
                            @Model.TxCategoria
                        </span>
                        <h3 class="fw-semibold text-gray-dark mt-1 mb-2">
                            @Model.TxTitulo
                        </h3>
                        <div class="text-muted small">
                            <i class="far fa-calendar-alt me-1"></i>
                            @Model.DtInicioEvento.Value.ToString("dd MMMM yyyy")
                            –
                            @Model.DtFimEvento.Value.ToString("dd MMMM yyyy")
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
            </div>
            <div class="modal-body px-4">
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h6 class="text-green mb-2">
                            <i class="fas fa-align-left me-2"></i>Descrição
                        </h6>
                        <p class="text-gray-dark mb-0">@Model.TxDescricao</p>
                    </div>
                </div>
                <div class="row text-center mb-4">
                    <div class="col-md-6 mb-3 mb-md-0">
                        <div class="info-box p-3 bg-white rounded shadow-sm">
                            <i class="fas fa-play-circle fa-2x text-green mb-2"></i>
                            <div class="small text-gray">Início</div>
                            <div class="fw-semibold">@Model.DtInicioEvento.Value.ToString("dd/MM/yyyy")</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-box p-3 bg-white rounded shadow-sm">
                            <i class="fas fa-flag-checkered fa-2x text-green mb-2"></i>
                            <div class="small text-gray">Encerramento</div>
                            <div class="fw-semibold">@Model.DtFimEvento.Value.ToString("dd/MM/yyyy")</div>
                        </div>
                    </div>
                </div>
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h6 class="text-green mb-2">
                            <i class="fas fa-user-tie me-2"></i>Responsável
                        </h6>
                        <div class="text-gray-dark">
                            @if (Model.DtAlteracao != null)
                            {
                                <span>
                                    @Model.NoCentroCustoUsuarioAlterou
                                    <span class="text-muted">(@Model.NoUnidadeUsuarioAlterou)</span>
                                </span>
                            }
                            else
                            {
                                <span>
                                    @Model.NoCentroCustoUsuarioCadastrou
                                    <span class="text-muted">(@Model.NoUnidadeUsuarioCadastrou)</span>
                                </span>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer border-0 pt-0 px-4 pb-4">
                <button type="button" class="btn btn-outline-gray px-4 py-2" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Fechar
                </button>
            </div>
        </div>
    </div>
</div>
