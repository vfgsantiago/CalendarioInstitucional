@model CalendarioViewMOD

<div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
    <div class="d-flex align-items-center gap-2 mb-2">
        @if (Model.Tipo == CalendarioViewTipo.Semanal)
        {
            <button class="btn btn-sm btn-light" onclick="changeWeek(-1)">
                <i class="fas fa-chevron-left  px-2 py-0"></i>
            </button>
            <h6 class="mb-0 text-gray-dark d-inline d-lg-none">
                @Model.SemanaInicio.ToString("dd MMM") –
                @Model.SemanaFim.ToString("dd MMM yyyy")
            </h6>
            <h6 class="mb-0 text-gray-dark d-lg-inline d-none">
                @Model.SemanaInicio.ToString("dd MMMM") –
                @Model.SemanaFim.ToString("dd MMMM yyyy")
            </h6>
            <button class="btn btn-sm btn-light" onclick="changeWeek(1)">
                <i class="fas fa-chevron-right px-2 py-0"></i>
            </button>
        }
        @if(Model.Tipo == CalendarioViewTipo.Diaria)
        {
            <button class="btn btn-sm btn-light" onclick="changeDay(-1)">
                <i class="fas fa-chevron-left  px-2 py-0"></i>
            </button>
            <h6 class="mb-0 text-gray-dark">
                @Model.DiaSelecionado
            </h6>
            <button class="btn btn-sm btn-light" onclick="changeDay(1)">
                <i class="fas fa-chevron-right px-2 py-0"></i>
            </button>
        }
        @if (Model.Tipo == CalendarioViewTipo.Mensal)
        {
            <button class="btn btn-sm btn-light" onclick="changeMonth(-1)">
                <i class="fas fa-chevron-left  px-2 py-0"></i>
            </button>
            <h6 class="mb-0 text-gray-dark">@Model.MesDescricao</h6>
            <button class="btn btn-sm btn-light" onclick="changeMonth(1)">
                <i class="fas fa-chevron-right px-2 py-0"></i>
            </button>
        }
        <button class="btn btn-md bg-primary text-white d-none d-lg-inline" onclick="goToToday()">
            <i class="fas fa-map-marker-alt me-2"></i>Hoje
        </button>
    </div>
    <div class="btn-group-md">
        <button class="btn btn-light @(Model.Tipo == CalendarioViewTipo.Mensal ? "bg-primary text-white" : "")"
                onclick="changeView('Mensal')">
            <i class="fas fa-calendar-week me-2"></i>Mês
        </button>
        <button class="btn btn-light @(Model.Tipo == CalendarioViewTipo.Semanal ? "bg-primary text-white" : "")"
                onclick="changeView('Semanal')">
            <i class="fas fa-calendar-day me-2"></i>Semana
        </button>
        <button class="btn btn-light"
                onclick="toggleCalendarFullscreen()"
                title="Tela cheia">
            <i class="fas fa-expand"></i>
        </button>
        <button class="btn bg-primary text-white d-lg-none d-inline" onclick="goToToday()">
            <i class="fas fa-map-marker-alt"></i>
        </button>
    </div>
</div>
