@model EventoViewMOD
@{
    ViewData["Title"] = "Editar Conteúdo do Evento";
}

<div class="container-fluid py-5 px-5">
    <div class="bg-white rounded-4 border-0 shadow-sm px-5 pt-4 pb-2 mb-3">
        <div class="row align-items-center">
            <div class="col-6">
                <h3 class="text-gray-dark"><i class="fas fa-edit me-2"></i>Editar Conteúdo</h3>
                <p class="text-muted">Atualize o título e a descrição do evento.</p>
            </div>
            <div class="col-6 text-end">
                <h5>
                    <span class="badge rounded-pill bg-primary px-4 py-2 shadow-sm">
                        @Model.Evento.TxTitulo
                    </span>
                </h5>
            </div>
        </div>
    </div>
    <form asp-action="EditarConteudo" asp-controller="Evento" asp-area="Admin" method="post">
        <input type="hidden" asp-for="Evento.CdEvento" />
        <div class="row g-4 mb-4">
            <div class="col-8">
                <div class="card shadow-sm rounded-4 border-0 h-100">
                    <div class="card-body px-5 py-4">
                        <div class="mb-4">
                            <label asp-for="Evento.TxTitulo" class="form-label fw-semibold">Título</label>
                            <div class="input-group shadow-sm">
                                <span class="input-group-text bg-white"><i class="fas fa-lightbulb"></i></span>
                                <input asp-for="Evento.TxTitulo" class="form-control" maxlength="50" required placeholder="Ex: Reunião, Feriado, Evento Acadêmico" />
                            </div>
                            <span asp-validation-for="Evento.TxTitulo" class="text-danger small"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Evento.TxDescricao" class="form-label fw-semibold">Descrição</label>
                            <textarea asp-for="Evento.TxDescricao" class="form-control shadow-sm" rows="3" maxlength="200" placeholder="Descreva o propósito deste evento" required></textarea>
                            <span asp-validation-for="Evento.TxDescricao" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <div class="bg-white rounded-4 px-5 pt-4 pb-2 h-100 shadow-sm">
                    <div class="mb-4">
                        <label asp-for="Evento.DtInicioEvento" class="form-label fw-semibold">Início do Evento</label>
                        <div class="input-group shadow-sm">
                            <span class="input-group-text bg-white"><i class="fas fa-calendar"></i></span>
                            <input asp-for="Evento.DtInicioEvento" type="date" class="form-control" required />
                        </div>
                        <span asp-validation-for="Evento.DtInicioEvento" class="text-danger small"></span>
                    </div>
                    <div class="mb-1">
                        <label asp-for="Evento.DtFimEvento" class="form-label fw-semibold">Encerramento do Evento</label>
                        <div class="input-group shadow-sm">
                            <span class="input-group-text bg-white"><i class="fas fa-calendar-check"></i></span>
                            <input asp-for="Evento.DtFimEvento" type="date" class="form-control" required />
                        </div>
                        <span asp-validation-for="Evento.DtFimEvento" class="text-danger small"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-gray btn-sm shadow-sm"><i class="fas fa-chevron-left me-1"></i>Voltar</a>
            <button type="submit" class="btn bg-primary text-white btn-sm shadow-sm"><i class="fas fa-save me-2"></i>Salvar Alterações</button>
        </div>
    </form>
</div>
